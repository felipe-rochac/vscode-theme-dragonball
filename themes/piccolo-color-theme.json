{
  "name": "Dragon Ball Piccolo",
  "type": "dark",
  "colors": {
    "editor.background": "#0d1117",
    "editor.foreground": "#c9d1d9",
    "editorCursor.foreground": "#58a6ff",
    "editor.lineHighlightBackground": "#161b22",
    "editor.selectionBackground": "#264f78",
    "editor.selectionHighlightBackground": "#3b3b3b60",
    "editorIndentGuide.background1": "#21262d",
    "editorIndentGuide.activeBackground1": "#58a6ff",
    "editorLineNumber.foreground": "#8b949e",
    "editorLineNumber.activeForeground": "#c9d1d9",
    "activityBar.background": "#161b22",
    "activityBar.foreground": "#c9d1d9",
    "activityBar.activeBorder": "#7FFF00", // Piccolo accent
    "activityBar.inactiveForeground": "#6e7681",
    "activityBarBadge.background": "#7FFF00", // Piccolo accent
    "activityBarBadge.foreground": "#161b22",
    "sideBar.background": "#161b22",
    "sideBar.foreground": "#c9d1d9",
    "sideBarSectionHeader.background": "#21262d",
    "sideBarSectionHeader.foreground": "#7FFF00", // Piccolo accent
    "statusBar.background": "#161b22",
    "statusBar.foreground": "#c9d1d9",
    "statusBar.noFolderBackground": "#161b22",
    "statusBar.debuggingBackground": "#a98bff", // Piccolo accent
    "statusBar.debuggingForeground": "#161b22",
    "titleBar.activeBackground": "#161b22",
    "titleBar.activeForeground": "#c9d1d9",
    "titleBar.inactiveBackground": "#0d1117",
    "titleBar.inactiveForeground": "#6e7681",
    "tab.activeBackground": "#21262d",
    "tab.activeForeground": "#7FFF00", // Piccolo accent
    "tab.inactiveBackground": "#161b22",
    "tab.inactiveForeground": "#8b949e",
    "tab.border": "#21262d",
    "tab.activeBorder": "#7FFF00", // Piccolo accent
    "tab.unfocusedActiveBorder": "#a98bff99",
    "panel.background": "#161b22",
    "panel.border": "#21262d",
    "editorGroupHeader.tabsBackground": "#161b22"
  },
  "tokenColors": [
    // Base for general code
    { "scope": ["comment", "comment.line", "comment.block"], "settings": { "foreground": "#8b949e", "fontStyle": "italic" } },
    { "scope": ["keyword", "keyword.control.go"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold" } }, // Piccolo green
    { "scope": ["entity.name.type.go"], "settings": { "foreground": "#A98BFF" } },
    { "scope": ["entity.name.function", "entity.name.function.go"], "settings": { "foreground": "#a98bff", "fontStyle": "italic" } }, // Piccolo purple
    { "scope": ["variable", "variable.other.go"], "settings": { "foreground": "#ffffff" } },
    { "scope": ["string", "string.quoted.double.go", "string.quoted.single.go"], "settings": { "foreground": "#a5d6ff" } },
    { "scope": ["constant.numeric", "constant.numeric.go"], "settings": { "foreground": "#ffffff" } },
    { "scope": ["storage.type", "storage.type.go"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold" } },
    // Go imports and packages (TextMate fallback)
    { "scope": ["entity.name.import.go", "variable.other.package.go"], "settings": { "foreground": "#a98bff", "fontStyle": "bold" } },
    { "scope": ["entity.name.import.path.go"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold underline" } },
    // Source Go fallback
    { "scope": ["source.go"], "settings": { "foreground": "#A98BFF" } },
    // YAML
    { "scope": ["entity.name.tag.yaml"], "settings": { "foreground": "#a98bff", "fontStyle": "bold" } },
    { "scope": ["entity.name.anchor.yaml"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold underline" } },
    { "scope": ["entity.name.alias.yaml"], "settings": { "foreground": "#a98bff", "fontStyle": "bold" } },
    { "scope": ["string.unquoted.plain.out.yaml"], "settings": { "foreground": "#a5d6ff" } },
    { "scope": ["string.quoted.double.yaml", "string.quoted.single.yaml"], "settings": { "foreground": "#a98bff" } },
    { "scope": ["constant.numeric.yaml"], "settings": { "foreground": "#79c0ff" } },
    { "scope": ["constant.language.boolean.yaml"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold" } },
    { "scope": ["constant.language.null.yaml"], "settings": { "foreground": "#8b949e", "fontStyle": "italic" } },
    { "scope": ["comment.line.number-sign.yaml"], "settings": { "foreground": "#8b949e", "fontStyle": "italic" } },
    // JSON, JS, TS keys and values
    { "scope": ["support.type.property-name.json", "meta.object-literal.key.js", "meta.object-literal.key.ts", "meta.object-literal.key.tsx"], "settings": { "foreground": "#a98bff", "fontStyle": "bold" } },
    { "scope": ["string.value.json", "string.quoted.double.js", "string.quoted.single.js", "string.quoted.double.ts", "string.quoted.single.ts", "string.quoted.double.tsx", "string.quoted.single.tsx"], "settings": { "foreground": "#a5d6ff" } },
    { "scope": ["constant.numeric.json", "constant.numeric.js", "constant.numeric.ts", "constant.numeric.tsx"], "settings": { "foreground": "#79c0ff" } },
    { "scope": ["constant.language.boolean.json", "constant.language.boolean.js", "constant.language.boolean.ts", "constant.language.boolean.tsx"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold" } },
    { "scope": ["constant.language.null.json", "constant.language.null.js", "constant.language.null.ts", "constant.language.null.tsx"], "settings": { "foreground": "#8b949e", "fontStyle": "italic" } },
    { "scope": ["comment.line.double-slash.js", "comment.line.double-slash.ts", "comment.line.double-slash.tsx", "comment.block.documentation.js", "comment.block.documentation.ts", "comment.block.documentation.tsx"], "settings": { "foreground": "#8b949e", "fontStyle": "italic" } },
    { "scope": ["punctuation.separator.key-value.json", "punctuation.separator.key-value.js", "punctuation.separator.key-value.ts", "punctuation.separator.key-value.tsx"], "settings": { "foreground": "#7FFF00" } },
    { "scope": ["punctuation.definition.block.js", "punctuation.definition.block.ts", "punctuation.definition.block.tsx"], "settings": { "foreground": "#a98bff" } },
    // Makefile
    { "scope": ["keyword.control.makefile"], "settings": { "foreground": "#7CFF6B", "fontStyle": "bold" } },
    { "scope": ["variable.assignment.makefile"], "settings": { "foreground": "#7CFF6B", "fontStyle": "bold" } },
    { "scope": ["entity.name.function.target.makefile"], "settings": { "foreground": "#7CFF6B", "fontStyle": "bold underline" } },
    { "scope": ["meta.scope.target.makefile"], "settings": { "foreground": "#7CFF6B", "fontStyle": "bold" } },
    { "scope": ["meta.scope.prerequisites.makefile"], "settings": { "foreground": "#7CFF6B", "fontStyle": "" } },
    { "scope": ["support.constant.makefile"], "settings": { "foreground": "#FFD700", "fontStyle": "bold" } },
    { "scope": ["string.quoted.double.makefile", "string.quoted.single.makefile"], "settings": { "foreground": "#A084CA" } },
    { "scope": ["comment.line.number-sign.makefile"], "settings": { "foreground": "#A084CA", "fontStyle": "italic" } },
    // Terraform
    { "scope": ["keyword.control.terraform"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold" } },
    { "scope": ["variable.other.terraform"], "settings": { "foreground": "#ffffff" } },
    { "scope": ["entity.name.function.terraform", "variable.other.readwrite.terraform"], "settings": { "foreground": "#a98bff", "fontStyle": "italic" } },
    { "scope": ["entity.name.type.terraform"], "settings": { "foreground": "#A98BFF", "fontStyle": "bold" } },
    { "scope": ["string.quoted.double.terraform", "string.quoted.single.terraform"], "settings": { "foreground": "#a5d6ff" } },
    { "scope": ["constant.numeric.terraform"], "settings": { "foreground": "#79c0ff" } },
    { "scope": ["constant.language.boolean.terraform"], "settings": { "foreground": "#7FFF00", "fontStyle": "bold" } },
    { "scope": ["comment.line.number-sign.terraform"], "settings": { "foreground": "#8b949e", "fontStyle": "italic" } },
    { "scope": ["support.constant.terraform"], "settings": { "foreground": "#FFD700", "fontStyle": "bold" } },
    { "scope": ["punctuation.definition.block.terraform"], "settings": { "foreground": "#a98bff" } },
    { "scope": ["support.function.builtin.terraform"], "settings": { "foreground": "#a98bff", "fontStyle": "bold italic" } }
  ]
}

